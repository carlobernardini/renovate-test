{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabledManagers": ["npm"],
  "prConcurrentLimit": 5,
  "prHourlyLimit": 20,
  "semanticCommits": "enabled",
  "recreateWhen": "always",
  "packageRules": [
    {
      "matchPackageNames": ["react"],
      "matchUpdateTypes": ["patch", "minor"],
      "enabled": true
    },
    {
      "excludePackageNames": ["react"],
      "enabled": false
    }
  ]
}
