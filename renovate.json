{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabledManagers": ["npm"],
  "packageRules": [
    {
      "matchPackagePatterns": ["*"],
      "excludePackageNames": ["react"],
      "enabled": false
    },
    {
      "matchPackageNames": ["react"],
      "matchUpdateTypes": ["patch", "minor"],
      "enabled": true
    }
  ]
}
